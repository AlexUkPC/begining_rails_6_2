<div class="comment" id="comment-<%= comment.id %>">
  <h3>
    <%= comment.name %> <<%= comment.email %>> said:
    <span class="actions">
      <%= link_to 'Delete', article_comment_path(article_id: @article, id: comment), data: {confirm: 'Are you sure?'}, method: :delete, remote: true %>
    </span>
  </h3>
  <%= comment.body %>
</div>